{
  "name": "omdbapi-exercise",
  "version": "0.1.0",
  "description": "Simple moviedb api as a refresher exercise with nestjs & typeorm",
  "author": "Jakub Wadas <vadistic@gmail.com>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write -l \"src/**/*.ts\" \"test/**/*.ts\"",
    "typecheck": "tsc -p tsconfig.josn --noEmit",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:image": "docker build -t omdbapi --target production .",
    "docker:run": "docker run --name api --rm -p 3000:3000 --env-file .env --network=host omdbapi"
  },
  "prettier": "@vadistic/prettier-config",
  "dependencies": {
    "@nestjs/common": "^7.5.1",
    "@nestjs/core": "^7.5.1",
    "@nestjs/graphql": "^7.8.1",
    "@nestjs/platform-express": "^7.5.1",
    "@nestjs/swagger": "^4.7.2",
    "@nestjs/typeorm": "^7.1.4",
    "apollo-server-express": "^2.19.0",
    "axios": "^0.21.0",
    "class-transformer": "^0.3.1",
    "class-validator": "^0.12.2",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "graphql": "^15.4.0",
    "pg": "^8.5.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.6.3",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.29"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.5.2",
    "@nestjs/schematics": "^7.2.1",
    "@nestjs/testing": "^7.5.1",
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.7",
    "@types/supertest": "^2.0.10",
    "@vadistic/eslint-config": "^0.5.1",
    "@vadistic/prettier-config": "^0.5.0",
    "eslint": "^7.13.0",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5"
  }
}
